# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH="{{ homedir.stdout }}/.oh-my-zsh"

HIST_STAMPS="yyyy-mm-dd"

ZSH_THEME="half-life"

plugins=(git venv-wrapper)

source $ZSH/oh-my-zsh.sh



#set editor for Git and anything else
if [ $(command -v nano) ]
    then
        export EDITOR=$(which nano)
fi

#nvm config, if installed
if [ -d "$HOME/.config/nvm" ]; then
    export NVM_DIR="$HOME/.config/nvm"
    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
fi

#print available aliases on shell start.
tput setaf 4
echo "Available Git Aliases: (usage: git <alias>)"
tput setaf 3
if (git config --list | grep -q alias); then

    git config --list | grep alias | while read line
        do
            echo $line | sed 's/alias./\t/' | sed 's/=/\t/g'
        done
fi
#revert colors
tput sgr 0
